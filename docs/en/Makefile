DIRS = manpages
CSS = RunDeck-Guide.css
DIST = dist

.PHONY: dist man html clean

all : dist man

dist :
	mkdir -p $(DIST)
	
man : 
	$(MAKE) -C manpages

$(DIST)/html : dist
	mkdir -p $(DIST)/html

html : $(DIST)/html
	pandoc --number-sections --toc -s 0[1-9]-*/*.md --css=$(CSS) --template=templates/html.template --include-before
	cp $(CSS) $(DIST)/html

clean :
	rm -r $(DIST)
	$(MAKE) -C manpages clean
